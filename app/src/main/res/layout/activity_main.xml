<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

        <TextView
            android:text="LOGIN"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:layout_above="@id/login_view"
            android:layout_margin="10dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/Blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_centerInParent="true"
            android:id="@+id/login_view"
            android:orientation="vertical"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:padding="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/username"
                android:hint="Username / Email"
                android:text="vicky@gmail.com"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/black"
                android:inputType="textEmailAddress"
                app:met_baseColor="@color/black"
                app:met_floatingLabel="highlight"
                app:met_primaryColor="@color/Blue"
                app:met_singleLineEllipsis="true"/>


            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/password"
                android:hint="Password"
                android:text="qwerty"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/black"
                android:inputType="textPassword"
                app:met_baseColor="@color/black"
                app:met_floatingLabel="highlight"
                app:met_primaryColor="@color/Blue"
                app:met_singleLineEllipsis="true"/>
        </LinearLayout>

        <TextView
            android:id="@+id/forgotpwd"
            android:layout_below="@id/login_view"
            android:layout_alignParentRight="true"
            android:textColor="@color/Blue"
            android:layout_margin="5dp"
            android:text="@string/forgot_passwrd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/login"
            android:text="@string/login"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:layout_below="@id/forgotpwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/create_acc"
            android:textColor="@color/Blue"
            android:layout_below="@id/login"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:text="@string/dont_have_an_account_sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


</RelativeLayout>